<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_news_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/image_demo" />

    <TextView
        android:id="@+id/tv_news_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_news_detail"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="dsafffffffffffffffffffffdsafasdssssssssssssssssssssssssssssssssssssss似的发射点风格跟对方的股份大股东的风格sssss"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_news_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tv_news_detail_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/iv_news_detail"
        android:gravity="bottom"
        android:paddingBottom="2dp"
        android:text="2015 05 08 11 1111"
        android:textColor="#9e9e9e"
        android:textSize="14sp" />

</RelativeLayout>